---
import { ViewTransitions } from "astro:transitions";
import "../styles/global.css";
import "github-markdown-css/github-markdown-light.css";

interface Props {
    title: string;
}

const { title } = Astro.props;
const baseUrl = import.meta.env.BASE_URL;
---

<!doctype html>
<html lang="zh-CN">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="OODS Homeworks" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <ViewTransitions />
    </head>
    <body
        class="bg-white text-slate-900 min-h-screen selection:bg-indigo-100 selection:text-indigo-900"
    >
        <header class="bg-[#24292e] text-white top-0 sticky z-50 shadow-sm">
            <div
                class="max-w-4xl mx-auto px-6 h-16 flex items-center justify-between"
            >
                <a
                    href={baseUrl}
                    class="font-bold text-xl tracking-tight text-white/90 hover:text-white transition-colors flex items-center gap-2"
                >
                    <svg
                        height="20"
                        viewBox="0 0 24 24"
                        width="20"
                        fill="currentColor"
                        style="opacity: 0.8;"
                        ><path
                            d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm-1-13h2v6h-2zm0 8h2v2h-2z"
                        ></path></svg
                    >
                    OODS
                </a>
                <span class="text-xs font-mono text-white/60">Course Works</span
                >
            </div>
        </header>
        <main class="max-w-4xl mx-auto px-6 py-12">
            <slot />
        </main>
        <footer
            class="border-t border-slate-200 mt-20 py-12 text-center text-slate-500 text-sm"
        >
            <p>
                &copy; {new Date().getFullYear()} OODS. All rights reserved.
            </p>
        </footer>
    </body>
</html>
